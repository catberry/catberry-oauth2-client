{
	"config": {
		"authorization": {
			"authServerUrl": "https://example.org",
			"clientId": "some_client_id",
			"clientSecret": "some_client_secret",
			"tokenEndpointPath": "/token",
			"endpoints": {
				"auth/user":{
					"grantType": "password",
					"scope": "wall",
					"cookie":{
						"accessTokenName": "pcat",
						"refreshTokenName": "repcat"
					}
				}
			}
		}
	},
	"cases": [
		{
			"name": "should set cookie with access token",
			"request": {
				"method": "POST",
				"port": 8201,
				"headers": {
					"Content-type": "application/x-www-form-urlencoded"
				},
				"path": "/auth/user",
				"data": {
					"username": "user",
					"password": "password"
				}
			},
			"response": {
				"code": 200,
				"headers": {
					"set-cookie": ["pcat=someaccesstoken"]
				},
				"content": {
					"access_token": "someaccesstoken",
					"token_type": "bearer"
				}
			},
			"authServer": {
				"request": {
					"url": "https://example.org/token",
					"method": "POST",
					"headers": {
						"Authorization": "Basic c29tZV9jbGllbnRfaWQ6c29tZV9jbGllbnRfc2VjcmV0",
						"Content-type": "application/x-www-form-urlencoded"
					},
					"data": {
						"grant_type": "password",
						"username": "user",
						"password": "password",
						"scope": "wall"
					}
				},
				"response": {
					"code": 200,
					"headers": {},
					"content": {
						"access_token": "someaccesstoken",
						"token_type": "bearer"
					}
				}
			}
		},
